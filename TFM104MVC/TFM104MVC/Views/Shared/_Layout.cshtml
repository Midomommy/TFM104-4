<script>
    var app = new Vue({
        el: '#register',
        data: {
            registerInformation: {
                account: "",
                password: "",
                roleName:"Member"
            }
        },
        methods: {
            addRegister: function () {
                let self = this;
                axios.post("/auth/register", self.registerInformation)
                    .then(
                        function (res) {
                            if (res.status == 200) {
                                alert("恭喜註冊成功，請再次登入，並至您的信箱接收帳號激活驗證信");
                                window.location.href = "/home/index";
                            };
                        }
                    )
                    .catch(function (error) {
                        if (error.status == 404)
                        {
                            alert(error.data);
                        }
                        if (error.status == 422)
                        {
                            console.log(error.data);
                            alert(error.data.errors);
                        }
                    });
            }
        }
    })
</script>


