<link rel="stylesheet" href="/css/orderDetail.css" type="text/css">


<div class="container mt-3 mb-5" id="orderDetailVue">
    <div class="row">

        <!--左功能列表-->
        <div class="col-md-3">
            <div class="card shadow">
                <img src="https://picsum.photos/400/300?ramdom=10" class="card-img-top">
                <div class="card-body">
                    <h5 class="card-title" id="product">商品標題</h5>
