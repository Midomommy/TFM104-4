@{
    ViewData["Title"] = "後台商品列表";
}
<link rel="stylesheet" href="/css/BackProductList.css" type="text/css">

<!--商品列表標題-->
<div class="d-flex justify-content-between my-4">
    <div class="" style="margin-left: 3rem;">
        <span class="product-list-title fw-bold fs-3" style="color: #3c5587;">
            所有商品
        </span>
    </div>
    <div class="add-product" style="margin-right: 3rem;">
        <button type="button" class="btn btn-outline-primary" onclick="location.href='@Url.Action("NewProduct", "Backstage")'">
            <i class="bi bi-plus-circle-fill"></i> 新增商品
        </button>
    </div>
</div>
<!--商品列表本體-->
<div class="product-list-body" style="margin-right: 3rem; margin-left: 3rem;">
    <!-- 商品搜尋列 -->
    <div class="product-list-search-bar d-flex gap-3">
        <!-- 選擇上架狀態 -->
        <div class="btn-group">
            <button type="button" class="btn btn-primary dropdown-toggle" data-bs-toggle="dropdown"
                    aria-expanded="false">
                選擇上架狀態
            </button>
            <ul class="dropdown-menu">
                <li><a class="dropdown-item" href="#">未審核</a></li>
                <li><a class="dropdown-item" href="#">已上架</a></li>
                <li><a class="dropdown-item" href="#">已下架</a></li>
            </ul>
        </div>
        <!-- 商品分類 -->
        <div class="btn-group">
            <button type="button" class="btn btn-primary dropdown-toggle" data-bs-toggle="dropdown"
                    aria-expanded="false">
                商品分類
            </button>
            <ul class="dropdown-menu">
                <li><a class="dropdown-item" href="#">露營</a></li>
                <li><a class="dropdown-item" href="#">水上活動</a></li>
                <li><a class="dropdown-item" href="#">人文之旅</a></li>
                <li><a class="dropdown-item" href="#">地方特色</a></li>
                <li><a class="dropdown-item" href="#">溫泉之旅</a></li>
                <li><a class="dropdown-item" href="#">戶外休閒</a></li>
                <li><a class="dropdown-item" href="#">景點門票</a></li>
            </ul>
        </div>
        <!-- 地區分類 -->
        <div class="btn-group">
            <button type="button" class="btn btn-primary dropdown-toggle" data-bs-toggle="dropdown"
                    aria-expanded="false">
                地區分類
            </button>
            <ul class="dropdown-menu">
                <li><a class="dropdown-item" href="#">北北基</a></li>
                <li><a class="dropdown-item" href="#">桃竹苗</a></li>
                <li><a class="dropdown-item" href="#">中彰投</a></li>
                <li><a class="dropdown-item" href="#">雲嘉南</a></li>
                <li><a class="dropdown-item" href="#">高屏</a></li>
                <li><a class="dropdown-item" href="#">宜花東</a></li>
                <li><a class="dropdown-item" href="#">離島地區</a></li>
            </ul>
        </div>
        <!-- 請輸入商品名稱 -->
        <div class="mb-3">
            <input type="text" class="form-control" id="productInput" placeholder="請輸入商品名稱">
        </div>
        <!-- 搜尋btn -->
        <div class="float-end">
            <button type="button" class="btn btn-primary" type="submit">
                搜尋
            </button>
        </div>
    </div>
    <!-- 商品列表 -->
    <div class="product-list-table">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th scope="col">
                        <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault">
                        全選
                    </th>
                    <th scope="col">商品編號</th>
                    <th scope="col">商品圖</th>
                    <th scope="col">品名</th>
                    <th scope="col">單價</th>
                    <th scope="col">上架狀態</th>
                    <th scope="col">
                        商品編輯&刪除
                    </th>
                </tr>
            </thead>
            <tbody>
